---
import { getCollection } from "astro:content";

const allIntros = await getCollection("introductions");

console.log(allIntros);
---

<section id="intro" class="flex flex-col gap-20 py-24">
  {
    allIntros.map((intro) => (
      <article class="flex grow max-lg:flex-col max-lg:items-center">
        <div class="prose prose-xl prose-p:text-zinc-300 prose-h4:text-white">
          <h4 class="text-5xl">{intro.data.title}</h4>
          <p class="text-2xl line-clamp-2">{intro.body}</p>
        </div>
      </article>
    ))
  }
  <slot />
</section>
