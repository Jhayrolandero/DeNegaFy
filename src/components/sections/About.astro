---
import { getCollection, getEntry } from "astro:content";
import { Image } from "astro:assets";

const allArticles = await getCollection("articles");
---

<section id="about" class="flex flex-col gap-20 py-24">
  <h4 class="text-zinc-50 text-5xl pb-20">Why Eliminate Negas?</h4>
  {
    allArticles.map((article) => (
      <article class="flex max-lg:flex-col max-lg:items-center">
        <div class="prose prose-xl prose-p:text-zinc-300 prose-h4:text-white">
          <h4 class="text-5xl">{article.data.title}</h4>
          <p class="text-2xl text-blue-500">{article.body}</p>
        </div>

        <Image
          src={article.data.image}
          width={860}
          height={200}
          alt={article.data.title}
          class="m-0 aspect-square max-h-96"
        />
      </article>
    ))
  }
</section>
