---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

type Props = {
  article: CollectionEntry<"articles">;
};

const { article } = Astro.props;
const { Content } = await article.render();
---

<article class="flex max-lg:flex-col max-lg:items-center">
  <div
    class="prose prose-xl prose-p:text-zinc-300 prose-h4:text-white prose-p:text-2xl"
  >
    <h4 class="text-5xl">{article.data.title}</h4>
    <Content />
  </div>

  <Image
    src={article.data.image}
    width={860}
    height={200}
    alt={article.data.title}
    class="m-0 aspect-square max-h-96"
  />
</article>
